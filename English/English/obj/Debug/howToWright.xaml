<common:LayoutAwarePage
    x:Name="pageRoot"
    x:Class="English.howToWright"
    DataContext="{Binding DefaultViewModel, RelativeSource={RelativeSource Self}}"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:English"
    xmlns:common="using:English.Common"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Page.Resources>
    </Page.Resources>

    <Page.BottomAppBar>
        <AppBar x:Name="GlobalAppBar" Padding="10,0,10,0" AutomationProperties.Name="Global App Bar">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="50*"/>
                    <ColumnDefinition Width="50*"/>
                </Grid.ColumnDefinitions>
                <StackPanel x:Name="LeftCommands" Orientation="Horizontal" Grid.Column="0" HorizontalAlignment="Left">
                <!--<Button x:Name="Back"  AutomationProperties.Name="Back" Style="{StaticResource BackAppBarButtonStyle }" HorizontalAlignment="Left" Click="Back_Click" Click="learnSmallLetter_Click"/>-->
                    <Button x:ConnectionId='1' x:Name="toLesssonMap" AutomationProperties.Name="בחזרה למפת השיעורים" Style="{StaticResource MapAppBarButtonStyle }" HorizontalAlignment="Left"                           />
                    <Button x:ConnectionId='2' x:Name="repeatClip" AutomationProperties.Name="לחזור על ההסבר" Style="{StaticResource RepeatAllAppBarButtonStyle }" Height="84" VerticalAlignment="Bottom"                          Margin="0,0,0,12" />
                    <Button x:ConnectionId='3' x:Name="ToWright" AutomationProperties.Name="לכתיבת האות" Style="{StaticResource EditAppBarButtonStyle }" Height="84" VerticalAlignment="Bottom"                        Margin="0,0,0,12"  />
                    <Button x:ConnectionId='4' x:Name="volumeOff" AutomationProperties.Name="ללא שמע" Style="{StaticResource VolumeAppBarButtonStyle }" Height="84" VerticalAlignment="Bottom"                         Margin="0,0,0,12"  />

                </StackPanel>
                <!--<StackPanel x:Name="RightCommands" Orientation="Horizontal" Grid.Column="1" HorizontalAlignment="Right">
                </StackPanel>-->
            </Grid>
        </AppBar>
    </Page.BottomAppBar>
    
    <Grid Style="{StaticResource LayoutRootStyle}">
        <Grid.Background>
            <ImageBrush ImageSource="Assets/רקע דף.png"/>
        </Grid.Background>
        <Grid.RowDefinitions>
            <RowDefinition Height="140"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Back button and page title -->
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Button x:ConnectionId='5' x:Name="backButton"                IsEnabled="{Binding Frame.CanGoBack, ElementName=pageRoot}" Style="{StaticResource BackButtonStyle}"/>
            <TextBlock x:Name="pageTitle" Grid.Column="1"  Style="{StaticResource PageHeaderTextStyle}" Margin="365,0,60,20" Height="80" Foreground="#DE040B55" FontWeight="Bold"/>
        </Grid>

        <!--<Border  BorderBrush="#FF160770" BorderThickness="10" Width="243.196"   Height="214.397" Margin="750,65,373,349" Grid.Row="1" >-->
        <MediaElement Name="mini" HorizontalAlignment="Left" Grid.Row="1" VerticalAlignment="Top" Width="200.632" Source="Assets/904.wmv"  Height="169.721"  RenderTransformOrigin="0.5,0.5" IsLooping="True" UseLayoutRounding="False" d:LayoutRounding="Auto" Margin="769.368,90.279,0,0">
            <MediaElement.RenderTransform>
                <CompositeTransform Rotation="22.192"/>
            </MediaElement.RenderTransform>
        </MediaElement>
            <!--</Border>-->
        <!--<Border    BorderBrush="#FF160770" BorderThickness="10" Width="243.196"   Height="214.397" Margin="750,65,373,349" Grid.Row="1" ></Border>-->

        <MediaElement Name="howToWrightSound"  />
        <Border Grid.Row="1" Margin="360,65,696,263" BorderBrush="#FF160770" BorderThickness="10" >
         <MediaElement Name="howToWrightClip" Source="EnglishLessonsMetirial/LettersClip/a1.mov" AutoPlay="True"/>
        </Border>
            <VisualStateManager.VisualStateGroups>

            <!-- Visual states reflect the application's view state -->
            <VisualStateGroup x:Name="ApplicationViewStates">
                <VisualState x:Name="FullScreenLandscape"/>
                <VisualState x:Name="Filled"/>

                <!-- The entire page respects the narrower 100-pixel margin convention for portrait -->
                <VisualState x:Name="FullScreenPortrait">
                    <Storyboard>
                        <ObjectAnimationUsingKeyFrames Storyboard.TargetName="backButton" Storyboard.TargetProperty="Style">
                            <DiscreteObjectKeyFrame KeyTime="0" Value="{StaticResource PortraitBackButtonStyle}"/>
                        </ObjectAnimationUsingKeyFrames>
                    </Storyboard>
                </VisualState>

                <!-- The back button and title have different styles when snapped -->
                <VisualState x:Name="Snapped">
                    <Storyboard>
                        <ObjectAnimationUsingKeyFrames Storyboard.TargetName="backButton" Storyboard.TargetProperty="Style">
                            <DiscreteObjectKeyFrame KeyTime="0" Value="{StaticResource SnappedBackButtonStyle}"/>
                        </ObjectAnimationUsingKeyFrames>
                        <ObjectAnimationUsingKeyFrames Storyboard.TargetName="pageTitle" Storyboard.TargetProperty="Style">
                            <DiscreteObjectKeyFrame KeyTime="0" Value="{StaticResource SnappedPageHeaderTextStyle}"/>
                        </ObjectAnimationUsingKeyFrames>
                    </Storyboard>
                </VisualState>
            </VisualStateGroup>
        </VisualStateManager.VisualStateGroups>
    </Grid>
</common:LayoutAwarePage>

